<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet"/>
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div id="header">
            <h2>Tareas Symfony</h2>
            <ul id="menu">
                {% if app.user %}
                    <li><a href="{{ path('task_view') }}">Inicio</a></li>
                    <li><a href="{{ path('task_user') }}">Mis Tareas</a></li>
                    <li><a href="{{ path('task_create') }}">Crear Tarea</a></li>
                    <li class="divright"><a href="{{ path('logout') }}">Cerrar sesi√≥n</a></li>
                    <li class="divright"><a href="">{{ app.user.name ~ ' ' ~ app.user.surname }}</a></li>
                {% else %}
                    <li><a href="{{ path('login') }}">Login</a></li>
                    <li><a href="{{ path('users_register') }}">Registro</a></li>
                {% endif %}
            </ul>
        </div>
        <div class="clearfix"></div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
