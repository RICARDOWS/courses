{% if tasks|length > 0 %}
    <table>
        <tr>
            <th>Tarea</th>
            <th>Prioridad</th>
            <th>Horas</th>
            <th>Acciones</th>
        </tr>

        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>
                    {% if task.priority == 'HIGH' %}
                        {{ 'Alta' }}
                    {% elseif task.priority == 'MEDIUM' %}
                        {{ 'Media' }}
                    {% elseif task.priority == 'LOW' %}
                        {{ 'Baja' }}
                    {% endif %}
                </td>
                <td>{{ task.hours }}</td>
                <td class="buttons">
                    <a href="{{ path('task_detail',{'id': task.id}) }}" class="btn_ver">Ver</a>
                    {% if app.user != null and task.user.id == app.user.id %}
                        <a href="{{ path('task_edit',{'id': task.id}) }}" class="btn_editar">Editar</a>
                        <a href="" class="btn_eliminar">Eliminar</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    <strong>No hay tareas disponibles</strong>
{% endif %}

