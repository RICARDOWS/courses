{% extends 'base.html.twig' %}

{% block title %}Tarea detalle{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h2>{{ task.title }}</h2>

        <p class="data-task">
            Creado por: {{ task.user.name }} {{ task.user.surname }} - {{ task.createdAt|date('d/m/Y') }}
        </p>

        <p>Contenido: {{ task.content }}</p>

        <p>Horas: {{ task.hours }}</p>

    </div>
{% endblock %}
